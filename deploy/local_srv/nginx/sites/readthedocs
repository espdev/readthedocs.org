    location /user_builds/ {
        internal;
        root /home/rtd/site/readthedocs.org;
        error_page 404 = @fallback;
        error_page 500 = @fallback;
        add_header X-Served nginx-via-django;
        add_header X-Cname $host;
        add_header X-Deity %(host)s;
    }
}
